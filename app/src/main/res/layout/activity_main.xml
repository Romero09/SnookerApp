<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eliteproukgreen"
    android:fillViewport="true"
    tools:context="com.example.android.snookerapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/woodtexture" />


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="55dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/player_one_name"
                    style="@style/editTextPlayerName"
                    android:hint="Player 1"/>

                <TextView
                    android:id="@+id/player_one_name_show"
                    style="@style/playerNameTextView"
                    android:text="Player 1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/increase_player_one"
                        style="@style/addDeleteButton"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button"
                        android:onClick="correctionPlusP1"
                        android:text="+1"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/playerOneScore"
                        style="@style/scoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="0"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/decrease_player_one"
                        style="@style/addDeleteButton"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button"
                        android:onClick="correctionMinusP1"
                        android:text="-1"
                        android:visibility="invisible" />


                </LinearLayout>


                <Button
                    android:id="@+id/plus_one_score_p1"
                    style="@style/ballButton"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_red"
                    android:onClick="plusOneScoreP1"
                    android:text="+1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus_two_score_p1"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_green"
                        android:onClick="plusTwoScoreP1"
                        android:text="+2" />


                    <Button
                        android:id="@+id/plus_three_score_p1"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_yellow"
                        android:onClick="plusThreeScoreP1"
                        android:text="+3" />


                    <Button
                        android:id="@+id/plus_four_score_p1"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_brown"
                        android:onClick="plusFourScoreP1"
                        android:text="+4" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus_five_score_p1"

                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_blue"
                        android:onClick="plusFiveScoreP1"
                        android:text="+5" />


                    <Button
                        android:id="@+id/plus_six_score_p1"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_pink"
                        android:onClick="plusSixScoreP1"
                        android:text="+6" />


                    <Button
                        android:id="@+id/plus_seven_score_p1"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_black"
                        android:onClick="plusSevenScoreP1"
                        android:text="+7"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/player_two_name"
                    style="@style/editTextPlayerName"
                    android:hint="Player 1" />

                <TextView
                    android:id="@+id/player_two_name_show"
                    style="@style/playerNameTextView"
                    android:text="Player 2" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/increase_player_two"
                        style="@style/addDeleteButton"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button"
                        android:onClick="correctionPlusP2"
                        android:text="+1"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/playerTwoScore"
                        style="@style/scoreText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="0"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/decrease_player_two"
                        style="@style/addDeleteButton"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_button"
                        android:onClick="correctionMinusP2"
                        android:text="-1"
                        android:visibility="invisible" />


                </LinearLayout>


                <Button
                    android:id="@+id/plus_one_score_p2"
                    style="@style/ballButton"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_red"
                    android:onClick="plusOneScoreP2"
                    android:text="+1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus_two_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_green"
                        android:onClick="plusTwoScoreP2"
                        android:text="+2" />

                    <Button
                        android:id="@+id/plus_three_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_yellow"
                        android:onClick="plusThreeScoreP2"
                        android:text="+3" />

                    <Button
                        android:id="@+id/plus_four_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_brown"
                        android:onClick="plusFourScoreP2"
                        android:text="+4" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/plus_five_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_blue"
                        android:onClick="plusFiveScoreP2"
                        android:text="+5" />

                    <Button
                        android:id="@+id/plus_six_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_pink"
                        android:onClick="plusSixScoreP2"
                        android:text="+6" />

                    <Button
                        android:id="@+id/plus_seven_score_p2"
                        style="@style/ballButton"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/shape_black"
                        android:onClick="plusSevenScoreP2"
                        android:text="+7"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:id="@+id/logs_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/linear1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/back"
            android:padding="4dp">

        <TextView
            android:id="@+id/logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="100"
            android:text="Logs:" />


        </ScrollView>

        <View
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/logs_scroll_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="76dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_button" />


        <Button
            android:id="@+id/reset_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/logs_scroll_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_button"
            android:onClick="resetScore"
            android:text="Reset"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</ScrollView>
